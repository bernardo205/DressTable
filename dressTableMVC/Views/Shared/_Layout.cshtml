                    </div>
                    <div class="cultures responsive-coltures">
						<a class="flag">
                            pt
                        </a>
                    </div>
                    
                </div>
            </div>
            <div class="close-header-menu-wrapper d-none" id="menu-close">
                <button id="close-header-menu" class="header-nav-menu navbar-toggler " type="button" data-toggle data-target aria-controls aria-expanded aria-label>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="#ffffff" class="bi bi-x-lg" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
					</svg>
                </button>
			</div>
        </nav>

        
    </header>
    <script>
        const headerElement = document.getElementById('header');
        const navElement = document.getElementById('nav');
        const menuElement = document.getElementById('menu');
        const responsiveElement = document.getElementById('responsivemenucontent');
        const buttonElement = document.getElementById('header_minimenu');
        const closeElement = document.getElementById('menu-close');

        window.addEventListener('scroll', function () {
            const scrollTop = window.scrollY;

            if (scrollTop > 20) {
                navElement.classList.add('scroll');
                menuElement.classList.remove('d-flex');
                menuElement.classList.add('d-none');
                buttonElement.classList.remove('d-lg-none');
                buttonElement.classList.add('d-block');
            } else {
                navElement.classList.remove('scroll');
                menuElement.classList.remove('d-none');
                menuElement.classList.remove('d-none');
                menuElement.classList.add('d-flex');
                buttonElement.classList.add('d-lg-none');
                buttonElement.classList.remove('d-block');
            }
        });

        buttonElement.addEventListener('click', function() {
            const width = window.innerWidth;


            if (width <= 991) {
                responsiveElement.classList.remove('d-none');
                headerElement.classList.add('white');
                buttonElement.classList.remove('d-block');
                buttonElement.classList.add('d-none');
                closeElement.classList.remove('d-none');
                closeElement.classList.add('d-block');
                menuElement.classList.add('p-3');
            }
            else {
                menuElement.classList.remove('d-none');
                menuElement.classList.add('d-flex');
                headerElement.classList.add('white');
                buttonElement.classList.remove('d-block');
                buttonElement.classList.add('d-none');
                closeElement.classList.remove('d-none');
                menuElement.classList.add('p-3');
            }
        });

        closeElement.addEventListener('click', function () {
            const width = window.innerWidth;


            if (width <= 991) {
                responsiveElement.classList.add('d-none');
                headerElement.classList.remove('white');
                buttonElement.classList.remove('d-none');
                buttonElement.classList.add('d-block');
                closeElement.classList.remove('d-block');
                closeElement.classList.add('d-none');
                menuElement.classList.remove('p-3');
            }
            else {
                menuElement.classList.add('d-none');
                menuElement.classList.remove('d-flex');
                headerElement.classList.remove('white');
                buttonElement.classList.remove('d-none');
                buttonElement.classList.add('d-block');
                closeElement.classList.remove('d-block');
                closeElement.classList.add('d-none');
                menuElement.classList.remove('p-3');
            }
        });

    </script>

    @RenderBody()
